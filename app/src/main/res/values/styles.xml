<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Style for each sub-header-->
    <style name="Header2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding8</item>
        <item name="android:layout_marginBottom">@dimen/padding4</item>
        <item name="android:paddingLeft">@dimen/padding8</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/fontSizeSub</item>
    </style>

    <!--Style for content and review-->
    <style name="Content" parent="Header2">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textColor">#212121</item>
    </style>

</resources>
